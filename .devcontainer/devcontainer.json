
{
  "name": "MOD550 Python Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Install Git LFS as a Dev Container "Feature"
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },

  // After the container is created, set up LFS and Python deps for large dataset handling
  "postCreateCommand": "git lfs install && python -m pip install --upgrade pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}


